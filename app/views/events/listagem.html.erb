<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>Datetime</th>
      <th>End date</th>
      <th>Datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date.strftime("%d/%m/%Y")  %></td>
        <td><%= event.timeini.strftime("%H:%M") %></td>
        <td><%= event.end_date.strftime("%d/%m/%Y")  %></td>
        <td><%= event.timefim.strftime("%H:%M") %></td>
        <td><%= link_to 'Mostrar evento', event %></td>
        <td><%= link_to 'Editar evento', edit_event_path(event) %></td>
        <td><%= link_to 'Apagar evento', event, method: :delete, data: { confirm: 'Essa aÃ§ao ira apagar todos os agendamentos deste evento. Voce tem certeza ?' } %></td>
        <td><%= link_to 'Agendamentos', agendamentos_path(event) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>