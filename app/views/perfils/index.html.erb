<p id="notice"><%= notice %></p>

<h1>Perfis</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.nomeperfil %></td>
        <td><%= link_to 'Mostrar', perfil %></td>
        <td><%= link_to 'Editar', edit_perfil_path(perfil) %></td>
        <td><%= link_to 'Apagar', perfil, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Perfil', new_perfil_path %>
