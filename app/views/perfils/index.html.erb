<p id="notice"><%= notice %></p>

<h1>Perfis</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.nomeperfil %></td>
        <td><%= link_to 'Mostrar', perfil, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_perfil_path(perfil), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Apagar', perfil, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Perfil', new_perfil_path, class: 'btn btn-info' %>
