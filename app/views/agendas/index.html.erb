<p id="notice"><%= notice %></p>

<h1>Minhas Agendas ICB</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Apresenta na tela inicial</th>
      <th>Observacao</th>
      <th>Tipo</th>
      <th></th>     
      <th></th>
      <th></th>
      <th></th>
      <% if session[:admingeral] == true %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @agendas.each do |agenda| %>
      <tr>
        <td><%= agenda.nome %></td>
        <td><%= agenda.apresentacaotelaini %></td>
        <td><%= agenda.observacao %></td>
        <td><%= agenda.tipo %></td>
        <td><%= link_to 'Inscriçao', inscricao_path(agenda) %> </td>
        <td><%= link_to 'Salas', versalas_path(agenda) %> </td>
        <td><%= link_to 'Informaçoes', agenda %></td>
        <td><%= link_to 'Calendario', eventoagenda_path(agenda) %>  </td>

        <% if session[:admingeral] == true %>
          <td><%= link_to 'Editar', edit_agenda_path(agenda) %></td>
          <td><%= link_to 'Apagar', agenda, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br>
<% if session[:admingeral] == true %>
  <%= link_to 'Nova Agenda', new_agenda_path %>
<% end %>
