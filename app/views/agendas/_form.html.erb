<%= form_with(model: agenda, local: true) do |form| %>
  <% if agenda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(agenda.errors.count, "error") %> prohibited this agenda from being saved:</h2>

      <ul>
      <% agenda.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome, 'Nome' %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :apresentacaotelaini, 'Apresentar na tela inicial' %>
    <%= form.check_box :apresentacaotelaini %>
  </div>

  <div class="field">
    <%= form.label :tipo,'Selecione o tipo de agenda' %>
    <%= form.select :tipo,([['Publica'],['Privada']]) %>
  </div>


  <div class="field">
    <%= form.label :observacao, 'Observações gerais' %>
    <%= form.text_field :observacao %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvar' %>
  </div>
<% end %>
